<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="RbiCbdcHackathon2023.Pages.Popups.LoadMoneyPopup"
               xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
               xmlns:viewmodel="clr-namespace:RbiCbdcHackathon2023.ViewModels"
               x:DataType="viewmodel:LoadMoneyViewModel">
    <VerticalStackLayout Spacing="10" Padding="20" WidthRequest="200" BackgroundColor="White">
        <Label Text="Load Money"
               FontSize="20"
               HorizontalOptions="Center" />
        <Entry Placeholder="Enter amount"
               FontSize="18"
               Keyboard="Numeric"
               Text="{Binding Amount}"
               Margin="20,0,0,10"/>
        <Label Text="{Binding Error}"
               TextColor="Red"/>
        <Button Text="Proceed"
                HorizontalOptions="Center"
                FontSize="18"
                Command="{Binding LoadMoneyCommand}"/>
    </VerticalStackLayout>
</toolkit:Popup>